<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- noupdate="1" if user changes the sequence data, updating module will not override -->
    <data noupdate="1">
        <record id='sequence_hospital_patient' model='ir.sequence'>
            <field name="name">Hospital Patient Sequence</field>
            <field name="code">hospital.patient</field>
            <field name="prefix">HP</field>
            <field name="padding">5</field>
        </record>
    </data>

    <data noupdate="1">
        <record id='sequence_hospital_appointment' model='ir.sequence'>
            <field name="name">Hospital Appointment Sequence</field>
            <field name="code">hospital.appointment</field>
            <field name="prefix">HA</field>
            <field name="padding">5</field>
        </record>
    </data>

    <data noupdate="1">
        <record id='patient_tag_vip' model='patient.tag'>
            <field name="name">VIP</field>
        </record>
    </data>

    <data noupdate="1">
        <record id='patient_tag_kid' model='patient.tag'>
            <field name="name">KID</field>
        </record>
    </data>

    <data noupdate="1">
        <record id='patient_tag_adult' model='patient.tag'>
            <field name="name">ADULT</field>
        </record>
    </data>

    <data noupdate="1">
        <record id='patient_tag_mr' model='patient.tag'>
            <field name="name">MR</field>
            <field name="active" eval="False"/>
        </record>
    </data>
</odoo>