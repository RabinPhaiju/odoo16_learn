<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cancel_appointment_form" model="ir.ui.view">
        <field name="name">cancel.appointment.wizard.form</field>
        <field name="model">cancel.appointment.wizard</field>
        <field name="arch" type="xml">
            <form string="Cancel Appointment">
                <sheet>
                    <group>
                        <group>
                            <field name="appointment_id"/>                            
                            <field name="reason"/>                            
                        </group>
                        <group>
                            <field name="date_cancel"/>                            
                        </group>
                    </group>
                    <footer>
                        <button name="action_cancel" string="Cancel Appointment" type="object" class="oe_highlight" data-hotkey="q"/>
                        <button string="Discard" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cancel_appointment" model="ir.actions.act_window">
        <field name="name">Cancel Appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cancel.appointment.wizard</field>
        <!-- <field name="view_mode">form</field> -->
        <field name="target">new</field>
    </record>

    <menuitem id="menu_cancel_appointment" 
            name="Cancellation" 
            parent="menu_hospital_appointments"
            action="action_cancel_appointment"
            sequence="10"/>

</odoo>
