<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="create_lead" name="Create Leads">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure">
                    <div class="container">
                        <form role="form" action="/create/crm_leads" method="POST">
                            <input type="hidden" name="csrf_token" t-all-value="request.csrf_token()"/>
                            <div class="form-group">
                                <label for="leads_name" class="control-label">Name</label>
                                <input type="text" name="lead_name" t-att-value="lead_name" id="lead_name"
                                    class="form-control" required="required"/>
                            </div>
                            <div class="form-group">
                                <label for="email" class="control-label">Email</label>
                                <input type="email" name="email_id" t-att-value="email_id" id="email_id"
                                    class="form-control" required="required"/>
                            </div>
                            <div class="clearfix oe_login_buttons">
                                <button type="submit" class="btn btn-primary pull-left">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="leads_entry" name="Leads Created">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure">
                    <div class="container">
                      <p>Your record is successfully created!</p>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>